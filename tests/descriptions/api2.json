{
    "name": "Test API",
    "base_url": "http://test.api.org/",
    "methods": {
        "test": {
            "method": "GET",
            "path": "/test"
        },
        "test_requires": {
            "method": "GET",
            "path": "/test-requires/:id/:code.:format",
            "required_params": ["format", "id", "code"]
        },
        "test_optionals": {
            "method": "GET",
            "path": "/test-optionals"
        },
        "test_both": {
            "method": "GET",
            "path": "/test-both"
        }
    }
}
